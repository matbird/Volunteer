<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include layout="@layout/main_head" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/met_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="4dip"
            android:focusableInTouchMode="true"
            android:hint="请输入你的昵称"
            app:met_baseColor="#606060"
            app:met_clearButton="true"
            app:met_errorColor="#ff0000"
            app:met_floatingLabel="normal"
            app:met_floatingLabelTextColor="#6c6c6c"
            app:met_helperText="用于登录"
            app:met_helperTextColor="#6c6c6c"
            app:met_minCharacters="2"
            app:met_primaryColor="#2196F3"
            app:met_textColor="#343539"
            app:met_textColorHint="#6c6c6c"
            app:met_underlineColor="#003587" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/met_realname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="4dip"
            android:focusableInTouchMode="true"
            android:hint="请输入你的真实姓名"
            app:met_baseColor="#606060"
            app:met_clearButton="true"
            app:met_errorColor="#ff0000"
            app:met_floatingLabel="normal"
            app:met_floatingLabelTextColor="#6c6c6c"
            app:met_helperText="用于信息审核"
            app:met_helperTextColor="#6c6c6c"
            app:met_minCharacters="2"
            app:met_primaryColor="#2196F3"
            app:met_textColor="#343539"
            app:met_textColorHint="#6c6c6c"
            app:met_underlineColor="#003587" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/met_qq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="4dip"
            android:focusableInTouchMode="true"
            android:hint="请输入你的QQ号"
            app:met_baseColor="#606060"
            app:met_clearButton="true"
            app:met_errorColor="#ff0000"
            app:met_floatingLabel="normal"
            app:met_floatingLabelTextColor="#6c6c6c"
            app:met_helperText="用于信息审核"
            app:met_helperTextColor="#6c6c6c"
            app:met_minCharacters="4"
            app:met_primaryColor="#2196F3"
            app:met_textColor="#343539"
            app:met_textColorHint="#6c6c6c"
            app:met_underlineColor="#003587" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/met_fm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="4dip"
            android:focusableInTouchMode="true"
            android:hint="请选择分盟"
            app:met_baseColor="#606060"
            app:met_clearButton="true"
            app:met_errorColor="#ff0000"
            app:met_floatingLabel="normal"
            app:met_floatingLabelTextColor="#6c6c6c"
            app:met_helperTextColor="#6c6c6c"
            app:met_primaryColor="#2196F3"
            app:met_textColor="#343539"
            app:met_textColorHint="#6c6c6c"
            app:met_underlineColor="#003587" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_hd"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:layout_weight="1"
                android:background="#c6c6c6"
                android:gravity="center"
                android:padding="5dip"
                android:text="海淀"
                android:textColor="#343539"
                android:textSize="9sp" />
            <TextView
                android:id="@+id/tv_cp"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:layout_weight="1"
                android:background="#c6c6c6"
                android:gravity="center"
                android:padding="5dip"
                android:text="昌平"
                android:textColor="#343539"
                android:textSize="9sp" />
            <TextView
                android:id="@+id/tv_cy"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:layout_weight="1"
                android:background="#c6c6c6"
                android:gravity="center"
                android:padding="5dip"
                android:text="朝阳"
                android:textColor="#343539"
                android:textSize="9sp" />
            <TextView
                android:id="@+id/tv_dx"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:layout_weight="1"
                android:background="#c6c6c6"
                android:gravity="center"
                android:padding="5dip"
                android:text="大兴"
                android:textColor="#343539"
                android:textSize="9sp" />
            <TextView
                android:id="@+id/tv_ft"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:layout_weight="1"
                android:background="#c6c6c6"
                android:gravity="center"
                android:padding="5dip"
                android:text="丰台"
                android:textColor="#343539"
                android:textSize="9sp" />
            <TextView
                android:id="@+id/tv_sjs"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:layout_weight="1"
                android:background="#c6c6c6"
                android:gravity="center"
                android:padding="5dip"
                android:text="石景山"
                android:textColor="#343539"
                android:textSize="9sp" />
        </LinearLayout>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/met_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="4dip"
            android:focusableInTouchMode="true"
            android:inputType="textPassword"
            android:hint="请输入你的密码"
            app:met_baseColor="#606060"
            app:met_clearButton="true"
            app:met_errorColor="#ff0000"
            app:met_floatingLabel="normal"
            app:met_floatingLabelTextColor="#6c6c6c"
            app:met_helperText="密码需要六位以上哦"
            app:met_helperTextColor="#6c6c6c"
            app:met_minCharacters="6"
            app:met_primaryColor="#2196F3"
            app:met_textColor="#343539"
            app:met_textColorHint="#6c6c6c"
            app:met_underlineColor="#003587" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/met_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="4dip"
            android:focusableInTouchMode="true"
            android:inputType="textPassword"
            android:hint="请再次输入你的密码"
            app:met_baseColor="#606060"
            app:met_clearButton="true"
            app:met_errorColor="#ff0000"
            app:met_floatingLabel="normal"
            app:met_floatingLabelTextColor="#6c6c6c"
            app:met_helperText="确认密码"
            app:met_helperTextColor="#6c6c6c"
            app:met_primaryColor="#2196F3"
            app:met_textColor="#343539"
            app:met_textColorHint="#6c6c6c"
            app:met_underlineColor="#003587" />

        <com.dd.processbutton.iml.ActionProcessButton
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dip"
            android:text="注    册"
            android:textColor="#ffffff"
            android:textSize="20sp"
            custom:pb_colorComplete="@color/green_complete"
            custom:pb_colorNormal="@color/blue_normal"
            custom:pb_colorPressed="@color/blue_pressed"
            custom:pb_colorProgress="@color/purple_progress"
            custom:pb_textComplete="注册成功"
            custom:pb_textError="重新注册"
            custom:pb_textProgress="正在注册..." />
    </LinearLayout>

</ScrollView>